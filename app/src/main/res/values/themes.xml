<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.MaterialGallery" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MaterialGallery" parent="Base.MaterialGallery">
        <item name="android:navigationBarColor">@color/system_ui_scrim_black</item>
    </style>

    <style name="Theme.MaterialGallery.DayNight" parent="Theme.MaterialGallery" />

    <style name="Theme.MaterialGallery.DayNight.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.MaterialGallery.DayNight.Rounded">
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.MaterialGallery.Small.Rounded
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MaterialGallery.Medium.Rounded
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.MaterialGallery.Large.Rounded
        </item>
    </style>

    <style name="Theme.MaterialGallery.DayNight.Cut">
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.MaterialGallery.Small.Cut
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MaterialGallery.Medium.Cut
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.MaterialGallery.Large.Cut
        </item>
    </style>

    <style name="Theme.MaterialGallery.SplashScreen.DayNight" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.MaterialGallery.DayNight</item>
    </style>
</resources>